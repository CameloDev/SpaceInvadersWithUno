<Page
    x:Class="SpaceInvadersWithUno.ScoresPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Background="Black">

    <Grid Padding="20">
        <StackPanel Spacing="15">
            <TextBlock Text="PLACAR DE JOGADORES" 
                       FontSize="28" 
                       Foreground="White" 
                       HorizontalAlignment="Center"/>

            <ListView x:Name="ScoresList" 
                      Background="Transparent" 
                      BorderThickness="0"
                      Foreground="White">
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <StackPanel Orientation="Horizontal" Spacing="10">
                            <TextBlock Text="{Binding Nome}" Width="150"/>
                            <TextBlock Text="{Binding Pontuacao}" Width="80"/>
                            <TextBlock Text="{Binding Data}" Width="200"/>
                        </StackPanel>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>

            <Button Content="Voltar" Click="Voltar_Click"/>
        </StackPanel>
    </Grid>
</Page>
