<Page
    x:Class="SpaceInvadersWithUno.PaginaJogo"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Background="Black"
    IsTabStop="True"
    KeyDown="Pagina_TeclaPressionada"
    KeyUp="Pagina_TeclaLiberada" >

    <Canvas x:Name="CanvasJogo" Width="400" Height="600"
        Background="Black"
        IsTabStop="True"
        KeyDown="Pagina_TeclaPressionada"
        KeyUp="Pagina_TeclaLiberada">

        <Rectangle x:Name="RetanguloJogador" Width="45" Height="40" Canvas.Left="180" Canvas.Top="550" RadiusX="5" RadiusY="5">
            <Rectangle.Fill>
                <ImageBrush ImageSource="ms-appx:///Assets/nave.png" Stretch="Uniform"/>
            </Rectangle.Fill>
        </Rectangle>
        
        
        <TextBlock x:Name="TextoPontuacao" Text="PONTUAÇÃO: 0" Foreground="White" FontSize="14" Canvas.Left="10" Canvas.Top="10"/>
        <TextBlock x:Name="TextoVidas" Text="VIDAS: 3" Foreground="White" FontSize="14" Canvas.Left="300" Canvas.Top="10"/>
        <TextBlock x:Name="TextoOnda" Text="ONDA: 1" Foreground="White" FontSize="14" Canvas.Left="150" Canvas.Top="10"/>
    </Canvas>
</Page>