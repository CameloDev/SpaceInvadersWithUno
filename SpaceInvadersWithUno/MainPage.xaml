<Page
    x:Class="SpaceInvadersWithUno.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Background="Black">

    <Grid>
        <Canvas x:Name="ParticleCanvas"
                IsHitTestVisible="False"/>

        <StackPanel HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    Spacing="20">
            <TextBlock Text="SPACE INVADERS"
                       FontSize="36"
                       Foreground="White"
                       TextAlignment="Center"/>
            <Button Content="Iniciar Jogo"
                    Click="StartGame_Click"/>
            <Button Content="Ver Placar"
                    Click="VerPlacar_Click"/>
            <Button Content="Ver Controles"
                    Click="VerControles_Click"/>
        </StackPanel>
    </Grid>
</Page>
