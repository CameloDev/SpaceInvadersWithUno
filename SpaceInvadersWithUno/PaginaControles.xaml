<Page
    x:Class="SpaceInvadersWithUno.PaginaControles"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Background="Black"
    NavigationCacheMode="Enabled">

    <ScrollViewer>
        <StackPanel Margin="20" Spacing="20">
            <TextBlock Text="COMO JOGAR" 
                       FontSize="28" 
                       Foreground="White" 
                       FontWeight="Bold" 
                       HorizontalAlignment="Center"
                       Margin="0,0,0,20"/>

            <Border Background="#2A2A2A" CornerRadius="10" Padding="15">
                <StackPanel Spacing="15">
                    <TextBlock Text="🎮 CONTROLES" 
                               FontSize="20" 
                               Foreground="LightGreen" 
                               FontWeight="SemiBold"/>
                    
                    <StackPanel Spacing="10">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            
                            <TextBlock Text="← →" 
                                       FontSize="16" 
                                       Foreground="Yellow" 
                                       Margin="0,0,15,0"
                                       FontWeight="Bold"/>
                                       
                            <TextBlock Text="Movimentar a nave para esquerda e direita" 
                                       Foreground="White" 
                                       Grid.Column="1"
                                       TextWrapping="Wrap"/>
                        </Grid>
                        
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            
                            <TextBlock Text="Espaço" 
                                       FontSize="16" 
                                       Foreground="Yellow" 
                                       Margin="0,0,15,0"
                                       FontWeight="Bold"/>
                                       
                            <TextBlock Text="Atirar (limite de 1 projétil por vez)" 
                                       Foreground="White" 
                                       Grid.Column="1"
                                       TextWrapping="Wrap"/>
                        </Grid>
                    </StackPanel>
                </StackPanel>
            </Border>

            <Border Background="#2A2A2A" CornerRadius="10" Padding="15">
                <StackPanel Spacing="15">
                    <TextBlock Text="🎯 OBJETIVO" 
                               FontSize="20" 
                               Foreground="LightBlue" 
                               FontWeight="SemiBold"/>
                    
                    <TextBlock Text="Destrua todas as naves inimigas para avançar para a próxima onda. Evite ser atingido e não deixe os inimigos chegarem até você!" 
                               Foreground="White" 
                               TextWrapping="Wrap"/>
                </StackPanel>
            </Border>

            <Border Background="#2A2A2A" CornerRadius="10" Padding="15">
                <StackPanel Spacing="15">
                    <TextBlock Text="⭐ PONTUAÇÃO" 
                               FontSize="20" 
                               Foreground="Gold" 
                               FontWeight="SemiBold"/>
                    
                    <StackPanel Spacing="8">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            
                            <TextBlock Text="50 pts" 
                                       FontSize="14" 
                                       Foreground="Orange" 
                                       Margin="0,0,15,0"
                                       FontWeight="Bold"/>
                                       
                            <TextBlock Text="Inimigos superiores (linha de cima)" 
                                       Foreground="White" 
                                       Grid.Column="1"
                                       TextWrapping="Wrap"/>
                        </Grid>
                        
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            
                            <TextBlock Text="20 pts" 
                                       FontSize="14" 
                                       Foreground="Orange" 
                                       Margin="0,0,15,0"
                                       FontWeight="Bold"/>
                                       
                            <TextBlock Text="Inimigos intermediários" 
                                       Foreground="White" 
                                       Grid.Column="1"
                                       TextWrapping="Wrap"/>
                        </Grid>
                        
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            
                            <TextBlock Text="10 pts" 
                                       FontSize="14" 
                                       Foreground="Orange" 
                                       Margin="0,0,15,0"
                                       FontWeight="Bold"/>
                                       
                            <TextBlock Text="Inimigos inferiores" 
                                       Foreground="White" 
                                       Grid.Column="1"
                                       TextWrapping="Wrap"/>
                        </Grid>
                        
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            
                            <TextBlock Text="100-300 pts" 
                                       FontSize="14" 
                                       Foreground="Orange" 
                                       Margin="0,0,15,0"
                                       FontWeight="Bold"/>
                                       
                            <TextBlock Text="OVNI (nave vermelha que aparece aleatoriamente)" 
                                       Foreground="White" 
                                       Grid.Column="1"
                                       TextWrapping="Wrap"/>
                        </Grid>
                    </StackPanel>
                </StackPanel>
            </Border>

            <Border Background="#2A2A2A" CornerRadius="10" Padding="15">
                <StackPanel Spacing="15">
                    <TextBlock Text="❤️ VIDAS" 
                               FontSize="20" 
                               Foreground="LightCoral" 
                               FontWeight="SemiBold"/>
                    
                    <StackPanel Spacing="10">
                        <TextBlock Text="• Você começa com 3 vidas" 
                                   Foreground="White"/>
                        <TextBlock Text="• Perde 1 vida quando é atingido por um inimigo" 
                                   Foreground="White"/>
                        <TextBlock Text="• Ganha 1 vida extra a cada 1000 pontos" 
                                   Foreground="White"/>
                        <TextBlock Text="• Máximo de 6 vidas" 
                                   Foreground="White"/>
                    </StackPanel>
                </StackPanel>
            </Border>

            <Border Background="#2A2A2A" CornerRadius="10" Padding="15">
                <StackPanel Spacing="15">
                    <TextBlock Text="💡 DICAS ESTRATÉGICAS" 
                               FontSize="20" 
                               Foreground="Plum" 
                               FontWeight="SemiBold"/>
                    
                    <StackPanel Spacing="10">
                        <TextBlock Text="• Use as barreiras para se proteger dos tiros inimigos" 
                                   Foreground="White"/>
                        <TextBlock Text="• Foque primeiro nos inimigos de cima (valem mais pontos!)" 
                                   Foreground="White"/>
                        <TextBlock Text="• Fique atento ao OVNI para ganhar muitos pontos extras" 
                                   Foreground="White"/>
                        <TextBlock Text="• Os inimigos ficam mais rápidos a cada onda" 
                                   Foreground="White"/>
                    </StackPanel>
                </StackPanel>
            </Border>

            <Button Content="Voltar ao Menu" 
                    Click="VoltarButton_Click"
                    HorizontalAlignment="Center"
                    Margin="0,20,0,0"
                    Padding="20,10"
                    Background="#3A3A3A"
                    Foreground="White"/>
        </StackPanel>
    </ScrollViewer>
</Page>